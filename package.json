{
  "name": "karst",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "description": "project template",
  "main": "index.js",
  "scripts": {
    "tsinit": "type",
    "ladd": "lerna add",
    "boostrap": "lerna bootstrap",
    "precommit": "echo 'aa' && yarn lint-staged",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "eslint --cache --fix",
    "lint:css": "eslint --cache --fix",
    "test-lint": "npx eslint-config-prettier ",
    "prepare": "husky install",
    "build:core": "lerna run --scope @karst/core build",
    "start": "lerna run --scope @karst/server start --stream"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liamfend/karst.git"
  },
