  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "ts-node ",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/packages/compiler/src/server.ts",
      "outFiles": ["${workspaceFolder}/packages/compiler/**/*.js"]
    }
  ]
}
